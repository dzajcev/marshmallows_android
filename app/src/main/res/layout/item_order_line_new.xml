<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_bg_state"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:contentDescription="Фото товара"
            android:src="@drawable/connect_32"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Очень длинное название товара, может занимать две строки"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            app:layout_constraintStart_toEndOf="@id/imgProduct"
            app:layout_constraintTop_toTopOf="@id/imgProduct"
            app:layout_constraintEnd_toStartOf="@id/checkbox"
            android:layout_marginStart="12dp"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="350 ₽"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imgProduct"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            app:layout_constraintStart_toEndOf="@id/tvPrice"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"/>

        <!-- Итоговая сумма строки можно разместить справа -->
        <TextView
            android:id="@+id/tvLineTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="350 ₽"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/checkbox"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"/>

        <!-- Checkbox / отметка готово -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:checked="false"
            android:focusable="false"
            android:contentDescription="Готово"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
