<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3sp"
    android:layout_marginEnd="3sp"
    android:layout_marginBottom="1sp">

    <TextView
        android:id="@+id/orderLinesSimpleGoodName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5sp"
        android:gravity="start|center_vertical"
        android:minHeight="30sp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />


    <TextView
        android:id="@+id/orderLinesSimplePrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="1sp"
        android:gravity="center_vertical|end"
        android:minHeight="30sp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/orderLinesSimpleGoodName"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/orderLinesSimpleCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="1sp"
        android:gravity="center_horizontal|center_vertical"
        android:minHeight="30sp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/orderLinesSimpleGoodName"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/orderLinesSimpleSum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1sp"
        android:gravity="center_vertical|end"
        android:minHeight="30sp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/orderLinesSimpleGoodName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

</androidx.constraintlayout.widget.ConstraintLayout>