<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5sp"
    android:layout_marginEnd="5sp"
    android:layout_marginBottom="5sp"
    android:orientation="vertical"
    tools:context=".fragments.GoodCardFragment">

    <EditText
        android:id="@+id/goodCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5sp"
        android:background="@color/field_background"
        android:ems="10"
        android:gravity="top|start"
        android:hint="Название зефирки"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="5"
        android:minHeight="50sp"
        android:minLines="2"
        android:scrollbars="vertical"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goodCardPrice"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/goodCardName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="2pt"
        android:layout_marginBottom="5sp"
        android:background="@color/field_background"
        android:gravity="center|end"
        android:hint="Цена зефирки"
        android:minHeight="40sp"
        android:scrollbars="vertical"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goodCardName" />

    <EditText
        android:id="@+id/goodCardDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/goodCardPrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="2pt"
        android:background="@color/field_background"
        android:ems="10"
        android:gravity="top|start"
        android:hint="Описание зефирки"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="5"
        android:minHeight="50sp"
        android:minLines="2"
        android:padding="2pt"
        android:scrollbars="vertical"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/goodCardPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goodCardName" />

    <TextView
        android:id="@+id/tx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goodCardDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="2pt"
        android:text="История цен"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goodCardDescription" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/goodCardPriceHistoryList"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="2pt"
        android:layout_below="@id/tx1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/goodCardCancel"
        android:layout_below="@id/goodCardPriceHistoryList"
        android:gravity="center"
        android:layout_margin="2pt"
        android:stretchMode="spacingWidth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goodCardPriceHistoryList" />

    <Button
        android:id="@+id/goodCardCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="Отмена"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/goodCardSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Сохранить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>