<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3sp"
    android:layout_marginEnd="3sp"
    android:layout_marginBottom="1sp"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderItemId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_margin="3sp"
                android:gravity="start|top"
                android:minHeight="30sp"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderItemClientName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_margin="3sp"
                android:layout_weight="1"
                android:gravity="start|top"
                android:minHeight="30sp"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="Создан" />

            <TextView
                android:id="@+id/orderItemDateCreate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="3sp"
                android:layout_marginEnd="3sp"
                android:gravity="bottom" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="Выдача" />

            <TextView
                android:id="@+id/orderItemDeadline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="3sp"
                android:layout_marginEnd="3sp"
                android:gravity="bottom"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="К оплате"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/orderItemToPay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="3sp"
                android:layout_marginEnd="3sp"
                android:gravity="bottom"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="bottom"
                android:text="Статус" />

            <TextView
                android:id="@+id/ordertemStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginStart="3sp"
                android:layout_marginEnd="3sp"
                android:gravity="bottom"
                android:text="defsdfgds"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

