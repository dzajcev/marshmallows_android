<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    tools:context=".fragments.OrderClientFragment">

    <!-- Header Card with order info -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Client name + phone row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvClient"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Имя клиента"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="1"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+7 (900) 000-00-00"
                    android:layout_marginEnd="8dp"/>

                <ImageButton
                    android:id="@+id/btnShare"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/connect_32"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Поделиться"/>
            </LinearLayout>

            <!-- Address + Delivery -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Адрес: ул. Ленина, 1"
                    android:layout_weight="1"/>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Доставка"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Dates row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvCreatedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Создан:"/>

                <TextView
                    android:id="@+id/tvCreated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="02.10.2025"
                    android:textStyle="bold"/>

                <Space android:layout_width="12dp" android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/tvIssueLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выдача:"/>

                <TextView
                    android:id="@+id/tvIssue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="04.10.2025"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Summary row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/totalSum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Сумма заказа: 1002 р"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvPrePay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Предоплата: 10 р"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvToPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="К оплате: 0 р"
                    android:textStyle="bold"
                    android:textColor="@color/green_700"/>
            </LinearLayout>

            <!-- Comment input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Введите комментарий"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- RecyclerView: список товаров -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrderLines"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="92dp"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:layout_constraintBottom_toTopOf="@id/save_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <!-- Большая кнопка Сохранить (фиксирована внизу) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Сохранить"
        android:textAllCaps="false"
        app:cornerRadius="28dp"
        app:iconGravity="textStart"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/green_600"
        android:textColor="@android:color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>