<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.OrderClientFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.93"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">

            <TextView
                android:id="@+id/clientName"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/field_background"
                android:gravity="left|center_vertical"
                android:hint="Выберите клиента"
                android:minHeight="40sp"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:minHeight="16pt"
                android:paddingStart="2pt"
                android:paddingEnd="2pt"
                android:text="Телефон"
                android:textSize="16sp" />

            <com.arefbhrn.maskededittext.MaskedEditText
                android:id="@+id/phoneNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:background="@color/field_background"
                android:gravity="start|center_vertical"
                android:inputType="phone"
                android:typeface="monospace"
                android:hint="9001234567"
                app:allowed_chars="1234567890"
                app:mask="+7(###)###-##-##"
                app:keep_hint="true"
                android:minHeight="30sp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:minHeight="16pt"
                android:paddingStart="2pt"
                android:paddingEnd="2pt"
                android:text="Адрес"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/delivery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:lines="1"
                android:minLines="1"
                android:maxLines="3"
                android:background="@color/field_background"
                android:gravity="start|center_vertical"
                android:minHeight="40sp"
                android:textSize="16sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/orderClientsNeedDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical"
            android:text="Требуется доставка" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:minHeight="16pt"
                android:paddingStart="2pt"
                android:paddingEnd="2pt"
                android:text="Выполнить до"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/deadline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:background="@color/field_background"
                android:gravity="end|center_vertical"
                android:minHeight="30sp"
                android:textAlignment="textEnd"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:paddingBottom="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:minHeight="16pt"
                android:paddingStart="2pt"
                android:paddingEnd="2pt"
                android:text="Предоплата"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/prePayment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:layout_weight="1"
                android:background="@color/field_background"
                android:gravity="end|center_vertical"
                android:minHeight="40sp"
                android:textAlignment="textEnd"
                android:textSize="16sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:background="@color/field_background"
            android:gravity="start|top"
            android:hint="Введите комментарий"
            android:minHeight="40sp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_weight="0.07"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ordersClientBackward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:background="@color/transparent"
            android:padding="5sp"
            android:src="@drawable/backward_50" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/ordersClientSave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|end"
            android:background="@color/transparent"
            android:src="@drawable/save_50" />
    </LinearLayout>

</LinearLayout>